<%- include('partials/navbar') %>

<main class="max-w-5xl mx-auto px-6 py-8">
  <h1 class="text-3xl font-bold mb-6 text-center"><%= title %></h1>

  <% if (projects && projects.length > 0) { %>
    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr class="bg-gray-100">
            <th class="py-2 px-3 text-left">ID</th>
            <th class="py-2 px-3 text-left">Title</th>
            <th class="py-2 px-3 text-left">Sector</th>
            <th class="py-2 px-3 text-center">More Info</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(p => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-2 px-3"><%= p.id %></td>
              <td class="py-2 px-3"><%= p.title %></td>
              <td class="py-2 px-3"><%= p.sector %></td>
              <td class="py-2 px-3 text-center">
                <a href="/solutions/projects/<%= p.id %>"
                   class="text-blue-600 hover:underline">View Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="text-center text-gray-600 mt-10">
      <p>No projects found for this sector.</p>
      <a href="/solutions/projects"
         class="text-blue-600 hover:underline">Back to all projects</a>
    </div>
  <% } %>
</main>

