<%- include('partials/head') %>

<main class="max-w-6xl mx-auto px-6 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= title %></h1>

  <div class="mb-6 flex flex-wrap gap-3">
    <a href="/solutions/projects?sector=Electricity" class="btn btn-outline">Electricity</a>
    <a href="/solutions/projects?sector=Transportation" class="btn btn-outline">Transportation</a>
    <a href="/solutions/projects?sector=Industry" class="btn btn-outline">Industry</a>
    <a href="/solutions/projects?sector=Buildings" class="btn btn-outline">Buildings</a>
    <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-outline">Food, Agriculture, and Land Use</a>
  </div>

  <% if (projects && projects.length) { %>
    <div class="overflow-x-auto bg-white rounded-xl shadow">
      <table class="table w-full">
        <thead>
          <tr>
            <th>ID</th><th>Title</th><th>Sector</th><th></th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(p => { %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.title %></td>
              <td><%= p.sector %></td>
              <td><a href="/solutions/projects/<%= p.id %>" class="btn btn-sm btn-primary">View Details</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <p class="text-gray-500 mt-4">No projects available.</p>
  <% } %>
</main>

<%- include('partials/footer') %>
